    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="match_parent"
        android:layout_height = "wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Login"
        android:text="Entrar" />

</LinearLayout>